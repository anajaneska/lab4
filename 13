#include <stdio.h>

int main()
{
    int n;
    scanf("%d", &n);
    
    if(n>2)
    {
        for(int i=n;i>0;i--)
        {
            for(int j=0;j<i;j++)
            {
                if(j==0 || i==n || j == i-1)
                {
                   printf("*"); 
                }
                else
                printf(" ");
            }
            printf("\n");
        }
    }
    else
    printf("Nevaliden vlez");
}
